<project name="dispatcher" default="main">
	<taskdef resource="net/sf/antcontrib/antlib.xml" />
<!--
	<property name="6.1.jenkins.url" value="http://test-12.lax.liferay.com/12/job/test-deprecated-portal-fixpack(ee-6.0.12..ee-6.2.10)/buildWithParameters" />
	<property name="6.2.jenkins.url" value="http://test-2.liferay.com/job/test-portal-fixpack(ee-6.2.10_6.2.10.1)/buildWithParameters" />
	<property name="smoke.test.jenkins.url" value="http://test-12.lax.liferay.com/12/job/test-deprecated-portal-fixpack(ee-6.0.12..ee-6.2.10)/buildWithParameters" />
-->
	<property name="6.1.jenkins.url" value="http://localhost:8080/job/test-12/buildWithParameters" />
	<property name="6.2.jenkins.url" value="http://localhost:8080/job/test-2/buildWithParameters" />
	<property name="smoke.test.jenkins.url" value="http://localhost:8080/job/test-12/buildWithParameters" />
	
	<property name="host.name" value="http://mirrors/files.liferay.com/private/ee/fix-packs/" />
	<property name="test.build.fix.pack.zip.url" value="${host.name}${patcher.build.file.name}" />

	<target name="curl">
		<exec executable="curl">
			<arg value="-d" />
			<arg value="token=${token}" />
			<arg value="-d" />
			<arg value="test.build.fix.pack.zip.url=${test.build.fix.pack.zip.url}" />
			<arg value="-d" />
			<arg value="test.build.run.smoke.test.only=${is.smoke.test.only}" />
			<arg value="-d" />
			<arg value="userId=${userId}" />
			<arg value="-d" />
			<arg value="patcher.build.id=${patcher.build.id}" />
			<arg value="${jenkins.url}" />
		</exec>	
	</target>

	<target name="dispatcher">
		<if>
			<contains string="${patcher.build.patcher.portal.version}" substring="6.2.10" />
			<then>
				<if>
					<isfalse value="${patcher.build.run.smoke.test.only}" />
					<then>
						<antcall target="curl">
							<param name="jenkins.url" value="${6.2.jenkins.url}" />
							<param name="is.smoke.test.only" value="false" />
						</antcall>
					</then>
				</if>
				
				<antcall target="curl">
					<param name="jenkins.url" value="${smoke.test.jenkins.url}" />
					<param name="is.smoke.test.only" value="true" />
				</antcall>
			</then>
			<elseif>
				<contains string="${patcher.build.patcher.portal.version}" substring="6.1.30" />
				<then>
					<antcall target="curl">
						<param name="jenkins.url" value="${6.1.jenkins.url}" />
						<param name="is.smoke.test.only" value="${patcher.build.run.smoke.test.only}" />
					</antcall>					
				</then>
			</elseif>
		</if>
	</target>
	
	<target name="main" depends="dispatcher" />
</project>